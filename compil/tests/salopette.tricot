Name : salopette_test
Description : "Essai de description de la salopette décrite en réunion : version avec splits et links n-aires"

piece left_leg := start 50
	       || trapezoid ( height : 200, shift : 0, upper_width : 50, pattern : envers )
       	       || link front 0

piece right_leg := start 50
		|| trapezoid ( height : 200, shift : 0, upper_width : 50, pattern : envers )
		|| link front 50

piece front := start 100
	    || trapezoid ( height : 100, shift : 0, upper_width : 100, pattern : envers )
            || split 15 10 { trapezoid ( height : 30, shift : 0, upper_width : 10, pattern : envers )
			  || link back 15
                          }
		     75 10 { trapezoid ( height : 30, shift : 0, upper_width : 10, pattern : envers )
		          || link back 75
	                  }

piece back := start 100
	   || trapezoid ( height : 100, shift : 0, upper_width : 100, pattern : envers )
   	   || split 0 50 { trapezoid ( height : 200, shift : 0, upper_width : 50, pattern : envers )
			|| stop
		        }
		    50 50 { trapezoid ( height : 200, shift : 0, upper_width : 50, pattern : envers )
		  	 || stop
                         }
